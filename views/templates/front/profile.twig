{% include "hook/head.twig" %}
<div id="container">
	<div class="card">
		<div><img src="././../views/img/cilueta.png" alt="Banner de silueta"/></div>
		<form action="./../../controllers/profile.php" method="post">
			<h3>PERFIL</h3>
			<div id="section">
				<div class="dates">
					<label>
						<p>Nombres</p>
						<input type="text" name="first_name" id="first_name" value="{{dataUser.first_name}}">
					</label>
					<label>
						<p>Apellidos</p>
						<input type="text" name="last_name" id="last_name" value="{{dataUser.last_name}}">
					</label>
				</div>
				
				<div class="dates">
					<label>
						<p>Edad</p>
						<input type="number" name="edad" id="edad" value="20">
					</label>
					<label>
						<p>Peso actual</p>
						<input type="text" name="actual_weight" id="actual_weight" value="{{dataUser.actual_weight}}">
					</label>
				</div>
				
				<div class="dates">
					<label>
						<p>Sexo</p>
						<input type="text" name="gender" id="gender" value="{{dataUser.gender}}">
					</label>
					<label>
						<p>Entrenar√°s en</p>
						<input type="text" name="exercise_space" id="exercise_space" value="{{dataUser.exercise_space}}">
					</label>
				</div>
				<div class="dates">
					<label>
						<p>Celular</p>
						<input type="number" name="phone_number" id="phone_number" value="{{dataUser.phone_number}}">
					</label>
				</div>
				<div class="dates">
					<label>
						<p>Correo</p>
						<input type="text" name="email" id="email" value="{{dataUser.email}}">
					</label>
				</div>
			</div>
			<input type="hiden" name="last_update" id="last_update" value="{{date_now}}">
			<br/>
			<input id="button-submit" type="submit" name="" value="Guardar">
		</form>
	</div>
</div>

<div id="messagehelp" class="hide">
	Hola Soy un mensaje de ayuda de la vista profile
</div>
